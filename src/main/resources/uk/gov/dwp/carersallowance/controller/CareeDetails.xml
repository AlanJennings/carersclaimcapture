<FormData>
<!-- 
    validations can be layered on top of this (on the value tag)
 -->    
    <page sectionId="Section 5 of 11" url="/care-you-provide/their-personal-details">
        <title>Partner details - About your partner</title>
        <pageTitle>Details of the person you care for - About the person you care for</pageTitle>
        <backLink>/your-partner/personal-details</backLink>
        <nextLink>/care-you-provide/more-about-the-care</nextLink>
        <errors>${validationErrors}</errors>
        <questions>
        
            <!--
                errors attribute isnot included as it is specified by the parent page element
                value is not specified as it has to mirror name
                id defaults to name, unless specified, so is also not included
                text fields label, hintBefore, hintAfter are probably going to be specified via resource bundles
                description is a design time description
                
                <textedit name="careeTitle" errors="${validationErrors}" >
                    <description></description>
                    <id>careeTitle</id>
                    <value>${careeTitle}</value>
                    <maxLength>20</maxLength>
                    <label>Title</label>
                </textedit> 
            -->

            <textedit name="careeTitle" >
                <maxLength>20</maxLength>
                <label>Title</label>
            </textedit>
        
            <textedit name="careeFirstName" >
                <maxLength>17</maxLength>
                <label>First name</label>
            </textedit> 

            <textedit name="careeMiddleName" >
                <maxLength>17</maxLength>
                <label>Middle name(s)</label>
            </textedit> 

            <textedit name="careeMiddleName" >
                <maxLength>17</maxLength>
                <label>Middle name(s)</label>
            </textedit> 
            
            <textedit name="careeSurname" >
                <maxLength>35</maxLength>
                <label>Last name</label>
            </textedit> 

        
        <!-- We accept a possible space around each character with 9 max in nino ie. AB010203D so 9*2+1 ==> 19 chars max -->
        <t:textedit id="careeNationalInsuranceNumber" 
                    name="careeNationalInsuranceNumber" 
                    value="${careeNationalInsuranceNumber}" 
                    maxLength="19" 
                    label="National Insurance number" 
                    errors="${validationErrors}" 
                    additionalClasses="ni-number"
                    hintBefore="For example, VO123456D"
                    hintAfter="This is on your NI number card, benefit letter, payslip or P60."
        />
        
        <t:datefield id="careeDateOfBirth" 
                     nameDay="careeDateOfBirth_day" 
                     nameMonth="careeDateOfBirth_month" 
                     nameYear="careeDateOfBirth_year" 
                     valueDay="${careeDateOfBirth_day}" 
                     valueMonth="${careeDateOfBirth_month}" 
                     valueYear="${careeDateOfBirth_year}" 
                     label="Date of birth" 
                     errors="${validationErrors}" 
                     hintBefore="For example, 16 5 1976" 
                     hintBeforeId="dateOfBirth_defaultDateContextualHelp"
        />
        
        <t:textedit id="careeRelationship" 
                    name="careeRelationship" 
                    value="${careeRelationship}" 
                    maxLength="35" 
                    label="What's their relationship to you?" 
                    errors="${validationErrors}" 
                    hintBefore="For example, father, mother, son, daughter."
        />
        
        <t:yesnofield id="careeSameAddress" name="careeSameAddress" value="${sameAddress}" label="Do they live at the same address as you?" errors="${validationErrors}" />
        
        <t:hiddenPanel id="addressWrapper" triggerId="sameAddress" triggerValue="no">
            <t:address id="careeAddress" 
                       nameOne="careeAddressLineOne"
                       nameTwo="careeAddressLineTwo"
                       nameThree="careeAddressLineThree"
                       valueOne="${careeAddressLineOne}"
                       valueTwo="${careeAddressLineTwo}"
                       valueThree="${careeAddressLineThree}"
                       maxlength="35"
                       label="Address"
                       errors="${validationErrors}"
            />
            
            <t:textedit id="careePostcode" name="careePostcode" value="${careePostcode}" maxLength="10" label="Postcode" errors="${validationErrors}" />
            
        </t:hiddenPanel>
        
            <question id="benefitsAnswer">
                <label>What benefit does the person you care for get?</label>
                <hintBefore>Don't include any benefits they've applied for if they haven't got a decision yet.</hintBefore>
                <hintAfter></hintAfter>
                <value>
                    <questions>
                    
                        <question id="benefitsAnswer_PIP" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Personal Independence Payment (PIP) daily living component</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>PIP</value>
                        </question>
                        
                        <question id="benefitsAnswer_DLA" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Disability Living Allowance (DLA) - middle or highest care rate</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>DLA</value>
                        </question>
                        
                        <question id="benefitsAnswer_AA" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Attendance Allowance (AA)</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>AA</value>
                        </question>
                        
                        <question id="benefitsAnswer_CAA" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Constant Attendance Allowance (CAA)</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>CAA</value>
                        </question>
                        
                        <question id="benefitsAnswer_AFIP" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Armed Forces Independence Payment (AFIP)</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>AFIP</value>
                        </question>
                    </questions>
                </value>            
            </question>
        </questions>
    </page>
</FormData>