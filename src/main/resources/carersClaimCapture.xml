<FormData>
<!-- 
    validations can be layered on top of this (on the value tag)
 -->    <page sectionId="" url="/allowance/benefits">
        <title>Can you get Carer's Allowance?</title>
        <beforeLink></beforeLink>
        <nextLink>/allowance/eligibility</nextLink>
        <questions direction="vertical">
            <question id="benefitsAnswer">
                <label>What benefit does the person you care for get?</label>
                <hintBefore>Don't include any benefits they've applied for if they haven't got a decision yet.</hintBefore>
                <hintAfter></hintAfter>
                <value>
                    <questions>
                    
                        <question id="benefitsAnswer_PIP" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Personal Independence Payment (PIP) daily living component</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>PIP</value>
                        </question>
                        
                        <question id="benefitsAnswer_DLA" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Disability Living Allowance (DLA) - middle or highest care rate</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>DLA</value>
                        </question>
                        
                        <question id="benefitsAnswer_AA" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Attendance Allowance (AA)</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>AA</value>
                        </question>
                        
                        <question id="benefitsAnswer_CAA" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Constant Attendance Allowance (CAA)</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>CAA</value>
                        </question>
                        
                        <question id="benefitsAnswer_AFIP" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Armed Forces Independence Payment (AFIP)</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>AFIP</value>
                        </question>
                    </questions>
                </value>            
            </question>
        </questions>
    </page>
    
    <page sectionId="" url="/allowance/eligibility">
        <title>Can you get Carer's Allowance?</title>
        <beforeLink>/allowance/benefits</beforeLink>
        <nextLink>/allowance/approve</nextLink>
        <questions>
            <question id="over35HoursAWeek" direction="vertical">
                <label>Do you spend 35 hours or more each week caring for the person you care for?</label>
                <hintBefore>For example, cooking meals, or helping them with their shopping.</hintBefore>
                <hintAfter></hintAfter>
                <!-- TODO: need to add support for a warning here: always shown -->
                <value>
                    <questions direction="horizontal">
                    
                        <question id="hours_answer_yes" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Yes</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>yes</value>
                        </question>
                        
                        <question id="hours_answer_no" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>No</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>no</value>
                            <!--TODO: Need to add support for some sort of warning here, for when a specific option is selected -->
                            <!-- probably generic, show "always" or show when "selected" or something -->
                        </question>
                        
                    </questions>
                </value>            
            </question>

            <question id="over16YearsOld">
                <label>Are you aged 16 or over?</label>
                <hintBefore></hintBefore>
                <hintAfter></hintAfter>
                <value>
                    <questions>
                    
                        <question id="over16_answer_yes" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Yes</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>yes</value>
                        </question>
                        
                        <question id="over16_answer_no" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>No</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>no</value>
                        </question>
                        
                    </questions>
                </value>            
            </question>
        
            <question id="originCountry">
                <label>Which country do you live in?</label>
                <hintBefore></hintBefore>
                <hintAfter></hintAfter>
                <value>
                    <questions direction="vertical">
                    
                        <question id="origin_GB" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>England, Scotland or Wales</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>GB</value>
                        </question>
                        
                        <question id="origin_NI" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Northern Ireland</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>NI</value>
                        </question>
                        
                        <question id="origin_OTHER" type="radio" clickEvent="true" border="true">   <!-- border = <div class="blockLabel"</div> -->
                            <label>Another country</label>
                            <hintBefore></hintBefore>
                            <hintAfter></hintAfter>
                            <value>OTHER</value>
                        </question>
                        
                    </questions>
                </value>            
            </question>
        
        </questions>
    </page>
        
    <page sectionId="" url="/allowance/approve">
        <title>Can you get Carer's Allowance?</title>
        <beforeLink>/allowance/eligibility</beforeLink>
        <nextLink></nextLink>
        <questions direction="vertical">
