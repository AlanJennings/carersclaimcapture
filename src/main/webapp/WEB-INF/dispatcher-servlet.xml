<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:mvc="http://www.springframework.org/schema/mvc"
    xsi:schemaLocation="
 http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
 http://www.springframework.org/schema/mvc 
 http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd 
 http://www.springframework.org/schema/context 
 http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <!-- Deliver anything in /assets directly -->
    <mvc:resources mapping="/assets/**" location="/assets/" />
    <mvc:default-servlet-handler />
    <mvc:annotation-driven ignore-default-model-on-redirect="true" />

    <bean class="uk.gov.dwp.carersallowance.controller.defaultcontoller.DefaultFormController"></bean>
    
    <bean class="uk.gov.dwp.carersallowance.handler.FilteredRequestMappingHandlerMapping">
        <property name="order" value="0" /> <!-- If this is not set, it ignores it -->
        <!-- Do not set the defaultHandler property, this is called when no controller is found, including excluded urls -->
        <property name="exclude"><value>/assets/**</value></property>
        <!-- 
            bizarelly spring does not allow you to set the same property twice, (the workarounds
            are something to behold), we only need it for one path though, so will generalize it later 
        -->
    </bean>

    <context:component-scan base-package="uk.gov.dwp.carersallowance.session" />    
    <context:component-scan base-package="uk.gov.dwp.carersallowance.controller" />
    
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix"><value>/views/</value></property>
        <property name="suffix"><value>.jsp</value></property>
    </bean>

    <bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
        <property name="basename" value="classpath:messages" />
        <property name="defaultEncoding" value="UTF-8" />
        <property name="cacheSeconds" value="1" />
    </bean>

    <bean id="localeResolver" class="org.springframework.web.servlet.i18n.CookieLocaleResolver">
        <property name="defaultLocale" value="en" />
        <property name="cookieName" value="c3LocaleCookie"></property>
        <property name="cookieMaxAge" value="3600"></property>
    </bean>

    <mvc:interceptors>
        <bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor">
            <property name="paramName" value="locale" />
        </bean>
    </mvc:interceptors>

</beans>